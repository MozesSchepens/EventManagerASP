@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <h2>Welkom bij het EventPlanner Systeem</h2>
    <p>Hier kunt u evenementen beheren en details bekijken.</p>

    <div class="sidebar">
        <h2>Evenementen</h2>
        <input type="text" placeholder="Zoeken..." class="search-box">

        <div class="event-list">
            @if (ViewBag.Events != null && ViewBag.Events.Count > 0)
            {
                @foreach (var eventItem in ViewBag.Events)
                {
                    <div class="event-item">
                        <a href="@Url.Action("Details", "Events", new { id = eventItem.Id })">@eventItem.Name</a>
                    </div>
                }
            }
            else
            {
                <p>Geen evenementen beschikbaar.</p>
            }
        </div>

        <a href="@Url.Action("Create", "Events")" class="button">Nieuw Evenement</a>
        </
