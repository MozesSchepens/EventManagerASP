@model EventManagerASP.Models.ErrorViewModel

@{
    ViewData["Title"] = "Foutpagina";
}

<h2>Oeps! Er is iets misgegaan.</h2>

@if (Model.StatusCode != 0)
{
    <p><strong>Statuscode:</strong> @Model.StatusCode</p>
}

@if (!string.IsNullOrEmpty(Model.OriginalPath))
{
    <p><strong>Oorspronkelijke URL:</strong> @Model.OriginalPath</p>
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p><strong>Foutmelding:</strong> @Model.Message</p>
}

@if (Model.ShowRequestId)
{
    <p><strong>Request ID:</strong> @Model.RequestId</p>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-warning">Terug naar home</a>
