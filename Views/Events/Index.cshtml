@model IEnumerable<Event>
<style>
    .page-title {
        font-size: 2rem;
        font-weight: bold;
        color: #FFD700;
    }

    .page-subtitle {
        font-size: 1.2rem;
        color: #fff;
    }

    .event-list {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
    }

        .event-list h3 {
            font-size: 1.5rem;
            font-weight: bold;
            color: #FFD700;
        }

        .event-list ul {
            list-style-type: none;
            padding: 0;
        }

        .event-list li {
            padding: 10px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

            .event-list li:last-child {
                border-bottom: none;
            }

    .event-link {
        color: #FFD700;
        font-weight: bold;
        text-decoration: none;
    }

        .event-link:hover {
            color: #FFA500;
            text-decoration: underline;
        }

    .search-box {
        width: 100%;
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

</style>

<h2 class="page-title">Welkom bij het EventPlanner Systeem</h2>
<p class="page-subtitle">Hier kunt u evenementen beheren en details bekijken.</p>

<div class="event-list">
    <h3>Evenementen</h3>
    <input type="text" class="form-control search-box" placeholder="Zoeken..." id="searchBox">
    <ul class="list-group mt-2">
        @foreach (var eventItem in Model)
        {
            <li class="list-group-item">
                <a href="@Url.Action("Details", "Events", new { id = eventItem.Id })" class="event-link">
                    @eventItem.Name
                </a>
            </li>
        }
    </ul>
</div>
