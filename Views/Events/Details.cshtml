@model EventManagerASP.Models.Event
<style>
    .list-group-item {
        background: rgba(255, 255, 255, 0.1);
        color: #FFD700;
        border: none;
        padding: 10px;
    }

    .btn-secondary {
        background-color: #D4A017;
        color: #fff;
        font-weight: bold;
        padding: 10px 15px;
        border-radius: 5px;
        display: inline-block;
        margin-top: 10px;
    }

        .btn-secondary:hover {
            background-color: #FFA500;
        }

</style>
<div class="card text-white bg-dark mb-3">
    <div class="card-header"><h2>@Model.Name</h2></div>
    <div class="card-body">
        <p><strong>Beschrijving:</strong> @Model.Description</p>
        <p><strong>Categorie:</strong> @Model.Category.Name</p>
        <p><strong>Startdatum:</strong> @Model.StartDate.ToString("dd MMM yyyy")</p>
        <p><strong>Einddatum:</strong> @Model.EndDate.ToString("dd MMM yyyy")</p>

        <a href="@Url.Action("Index", "Events")" class="btn btn-warning">Terug naar lijst</a>
    </div>
</div>
